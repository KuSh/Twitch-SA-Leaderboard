{
  "name": "functions",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "scripts": {
    "build:watch": "tsc --watch",
    "build": "tsc",
    "check": "tsc --noEmit",
    "clean": "node -e \"fs.rmSync('lib', {force:true,recursive:true})\"",
    "deploy": "firebase deploy --only functions",
    "emulator": "firebase emulators:start --only functions",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "logs": "firebase functions:log",
    "serve": "npm-run-all build --parallel build:watch emulator",
    "shell": "firebase functions:shell",
    "start": "npm-run-all build --parallel build:watch shell"
  },
  "dependencies": {
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^6.0.0",
    "luxon": "^3.5.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/luxon": "^3.4.2",
    "@types/node": "^18.19.50",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  }
}
