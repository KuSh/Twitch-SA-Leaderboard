{
  "name": "functions",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "scripts": {
    "lint": "prettier --check . && eslint .",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "build": "tsc",
    "build:watch": "tsc --watch",
